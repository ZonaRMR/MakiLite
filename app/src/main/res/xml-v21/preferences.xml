    <PreferenceCategory
        android:title="@string/preference_category5">

        <Preference
			android:key="notifications_settings"
            android:icon="@drawable/bell"
            android:title="@string/notifications_settings"/>

        <ListPreference
            android:id="@+id/chooseMessages"
            android:entries="@array/messages_choice"
            android:entryValues="@array/messages_pref"
            android:key="messages_pref"
            android:icon="@drawable/facebook_messenger"
            android:summary="@string/choose_client_hint"
            android:title="@string/messaging_clients"
            android:defaultValue="default_message"/>

        <SwitchPreference
            android:key="allow_inside"
            android:title="@string/maki_links"
            android:summary="@string/maki_links_summary"
            android:icon="@drawable/open_in_app"
            android:defaultValue="true"/>

        <SwitchPreference
            android:key="maki_locker"
            android:defaultValue="false"
            android:icon="@drawable/lock_outline"
            android:summary="@string/Maki_lock_about"
            android:title="@string/Maki_lock"/>

        <SwitchPreference
            android:key="allow_location"
            android:title="@string/enable_location"
            android:icon="@drawable/map_marker"
            android:summary="@string/enable_location_hint"/>

        <SwitchPreference
            android:icon="@drawable/twitter_settings"
            android:key="first_twitter"
            android:title="@string/first_twitter"
            android:defaultValue="false"/>

        <SwitchPreference
            android:key="confirm_exit"
            android:icon="@drawable/ic_exit"
            android:title="@string/confirm_exit"
            android:defaultValue="true"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/preference_category7">
        
        <Preference            
            android:key="custom_settings"
            android:icon="@drawable/ic_color"
            android:title="@string/customize_Maki"
            android:summary="@string/customize_Maki_hint"/>

        <ListPreference
        	android:id="@+id/relativeLayoutChooseFont"
            android:entries="@array/font_choice"
            android:entryValues="@array/font_pref"
            android:key="font_pref"
            android:icon="@drawable/text_shadow"
            android:summary="@string/choose_font_facebook_hint"
            android:title="@string/choose_font_facebook"
            android:defaultValue="default_font"/>
                    
     </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/news_feed_preferences">

        <ListPreference
            android:icon="@drawable/newspaper_selector"
            android:id="@+id/relativeLayoutChooseFeed"
            android:entries="@array/pref_default_feed"
            android:entryValues="@array/pref_feed"
            android:key="news_feed"
            android:summary="@string/feed_choice_hint"
            android:title="@string/feed_choice"
            android:defaultValue="default_news"/>

        </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/extra_preferences">

        <SwitchPreference
            android:key="play_gifs"
            android:title="@string/gifs"
            android:icon="@drawable/image_gif"
            android:summary="@string/gifs_summary"/>

        <SwitchPreference
            android:key="power_save"
            android:title="@string/power"
            android:icon="@drawable/battery"
            android:summary="@string/power_hint"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/settings_more">

        <Preference
            android:key="about_settings"
            android:icon="@drawable/information_outline"
            android:title="@string/title_activity_about"/>

        <Preference
            android:key="credits_settings"
            android:icon="@drawable/library_books"
            android:title="@string/credits_settings"/>

        <Preference
            android:key="help_development"
            android:title="@string/preference_donate_category"
            android:icon="@drawable/maki_pro"/>

        <Preference
            android:key="play_intro"
            android:icon="@drawable/play_circle_outline"
            android:title="@string/play_intro"/>

        <Preference
            android:key="whats_new"
            android:icon="@drawable/new_box"
            android:title="@string/what_new"/>

        <Preference
            android:key="help_translate"
            android:icon="@drawable/translate"
            android:title="@string/help_trans"/>

        <Preference
            android:key="clear"
            android:icon="@drawable/delete"
            android:title="@string/clear_cache"
            android:summary="@string/clear_cache_description"/>

        <Preference
            android:key="maki_source"
            android:icon="@drawable/github"
            android:title="@string/maki_source"/>

      </PreferenceCategory>

</PreferenceScreen>